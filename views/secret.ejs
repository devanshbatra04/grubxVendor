<script>
    function cancelOrder(el){
        let Reason = window.prompt("Please enter remarks (optional)", "Item not available")
    }
    function confirmCash(el){
        let Reason = window.confirm("GrubX is not responsible in case buyer does not show up");
        let parentRow = $(el).parent().parent();
        $.ajax({
            url: '/confirm',
            method: 'post',
            data: {id: parentRow.attr('id')},
            success: function(data) {
                parentRow.remove();
                renderNew(data);
            }
        })


    }
</script>
<script src="/socket.io/socket.io.js"></script>
<script>
    var socket = io();
    socket.on("connect", function(){
        window.redOrders = [];
        window.blueOrders = [];
        window.greenOrders = [];
        socket.emit("new Connection", ("<%= user.username %>"));
        console.log(socket.id);
        socket.on('post-order', function(data){
            renderNew(data);

        })
        socket.on("all orders", function(orders){
            console.log(orders);

            orders.forEach(function(order){
                renderNew(order);
            })
        })
    })

    function renderNew(data, table){
        if (table === undefined) {
            if (data.status === 0) {
                table = "red-table";
                redOrders.push(data);
            }
            if (data.status === 1) {
                table = "blue-table";
                blueOrders.push(data);
            }
            if (data.status === 2) {
                table = "green-table";
                greenOrders.push(data);
            }
        }

        let options = "";
        if (table === 'red-table')
        {
            options = `<button onclick="confirmCash(this)">
            Confirm order
        </button>
        <button onclick="cancelOrder(this)">
            Cancel order
        </button>`

        }
        if (table === 'blue-table'){
            options = `
        <button onclick="cancelOrder(this)">
            Cancel order
        </button>`
        }

        if (table === 'green-table'){
            options = `
        <button onclick="completeOrder(this)">
            Complete
        </button>`
        }
      let   ul = "khali";
    let toAppend = `<div class="row" id="${data._id}">
            <div class="cell">
            1
            </div>
            <div class="cell">
            <ul>
                ${ul}
            </ul>
        </div>
        <div class="cell">
            ${data.totals}
            </div>
            <div class="cell">
            ${data.cust_name}
            </div>
            <div class="cell">
            ${data.contact}
            </div>
            <div class="cell">
            ${data.delivery_time}
        </div>
        <div class="cell">
        ${options}
        </div>
        </div>`;
        $(`#${table}`).append(toAppend);
    }

</script>
